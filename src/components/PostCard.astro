---
import { slugify, formatDate } from "../js/utils";
import { Image } from "astro:assets";
//component imports
import Link from "./Link.astro"

const {data,url, tagType} = Astro.props;
const {title,date,author,description,category,image} = data;
const Tag = tagType;
---


<article class="card" >
        <small>
            <a href={`/category/${slugify(category)}/`} class="badge">{category}</a> 
        </small>
        <a href={`/blog/${url}`} aria-hidden="true" tabindex="-1">
            <Image 
            src={image.src} 
            alt={image.alt}
            width="400"
            height="250"
            format="webp"
            decoding="async"
            loading="lazy"
            quality={80}
            >
        </a>
        <div class="content">            
            <div>
                <Tag class="h3"><a href={`blog/${url}`}>{title}</a></Tag>
                <small>Od <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {formatDate(date)}</small>
            </div>
            <p>{description}</p>
            <Link 
                href={`/blog/${url}`}
                text="Czytaj"
                style="secondary"
                />
        </div>


</article>