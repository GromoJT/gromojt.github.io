---
//component import
import MainHead from './MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

//style import 
import "../styles/new_global.css"
import type { imageConfig } from 'astro:assets';



interface Props {
	title?: string;
	description?: string;
	image?: object;
	data?: string;
	robots?: boolean;
}

const {
	title = "Astro blog", 
	description = "Default description",
	image,
	data,
	robots,	
} = Astro.props as Props;
---


<html lang="en">
	<MainHead {title} {description} {image} {data} {robots}/>
	<body>
		<Nav/>
			<main>
				<slot>
					Default text
				</slot>
			</main>
		<Footer />
	</body>
</html>
